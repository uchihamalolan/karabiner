{
  "title": "Capslock Enhancement",
  "url": "https://github.com/uchihamalolan/karabiner",
  "version": "0.0.1",
  "maintainers": [
    "Malolan"
  ],
  "author": "Malo(uchihamalolan@gmail.com)",
  "website": "malolan.me",
  "json_url": "https://raw.githubusercontent.com/uchihamalolan/karabiner/main/karabiner.json",
  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/uchihamalolan/karabiner/main/karabiner.json",
  "gallery_url": "https://ke-complex-modifications.pqrs.org/#emulation-modes",
  "repo": "https://github.com/uchihamalolan/karabiner",
  "rules": [
    {
      "description": "CapsLock to Hyper",
      "manipulators": [
        {
          "description": "capslock = esc(click) | hyper(hold)",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        },
        {
          "description": "\\ = capslock switch",
          "type": "basic",
          "from": {
            "key_code": "\\",
            "modifiers": {
              "optional": [
                "caps_lock"
              ],
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Hyper Application",
      "manipulators": [
        {
          "description": "hyper + v = VSCode",
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Visual Studio Code'"
            }
          ]
        },
        {
          "description": "hyper + e = Edge",
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Microsoft Edge'"
            }
          ]
        },
        {
          "description": "hyper + f = Figma",
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Figma'"
            }
          ]
        },
        {
          "description": "hyper + s = slack",
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Slack'"
            }
          ]
        },
        {
          "description": "hyper + p = Postman",
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Postman'"
            }
          ]
        },
        {
          "description": "hyper + t = iTerm",
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'iTerm'"
            }
          ]
        },
        {
          "description": "hyper + i = IDEA",
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'IntelliJ IDEA Ultimate'"
            }
          ]
        }
      ]
    }
  ]
}
